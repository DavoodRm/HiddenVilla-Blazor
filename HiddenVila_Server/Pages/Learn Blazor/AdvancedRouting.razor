    private void LoadParam()
    {
        var absluteUri = new Uri(_navigationManager.Uri);
        var queryParam = System.Web.HttpUtility.ParseQueryString(absluteUri.Query);
        Param1 = queryParam[nameof(Param1)];
        Param2 = queryParam[nameof(Param2)];
    }

    private void BackClick()
    {
        _navigationManager.NavigateTo("learnrouting");
    }
}
