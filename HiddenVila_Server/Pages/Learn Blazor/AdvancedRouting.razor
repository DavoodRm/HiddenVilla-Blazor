@page "/advancedrouting"
@inject NavigationManager _navigationManager

<h3>AdvancedRouting</h3>
<h4> Parameter 1: @Param1</h4>
<h4> Parameter 2: @Param2</h4>

<p>
    <button class="btn btn-primary" @onclick="LoadParam">Load Param</button>
</p>

<a href="/learnrouting" class="btn btn-secondary"> Back to Rout with a tag  </a>
